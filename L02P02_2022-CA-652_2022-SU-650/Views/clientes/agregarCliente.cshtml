@{
    ViewBag.Title = "Crear cliente";
}

<div class="bg-dark my-5 py-5">
    <h3 class="text-light text-center my-5 py-5">Venta de Libros</h3>
</div>

<div class="container">
    <h2>Proceso de venta</h2>
    <h5>Datos del cliente</h5>
</div>

<div containter my-5>
    @using (Html.BeginForm("agregarCliente", "clientes", FormMethod.Post))
    {
        <div class="form-group row mb-4">
            <div class="col-sm-6">
                <label>Nombre</label>
                @Html.TextBox("nombre", "", new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                <label>Apellido</label>
                @Html.TextBox("apellido", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row my-4">
            <label>Email</label>
            @Html.TextBox("email", "", new { @class = "form-control" })
        </div>
        <div class="form-group row my-4">
            <label>Direccion</label>
            @Html.TextArea("direccion", "", new { @class = "form-control", @placeHolder = "Ingrese su direccion" })
        </div>

        <div class="form-group row mt-2">
            <input type="submit" class="btn btn-success" value="Iniciar venta" />
        </div>
    }
</div>

<footer class="bg-dark mt-5">
    <p class="text-light text-center mt-2">@DateTime.Now.ToString() José Chinchilla</p><br />
    <p class="text-light text-center">@DateTime.Now.ToString() Fabricio Sandoval</p><br />
</footer>